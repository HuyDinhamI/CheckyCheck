  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "strict": true,
    "outDir": "public/js",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "lib": ["DOM", "ES2015", "ES2016", "ES2017", "ES2018"]
